<%= stylesheet_link_tag "products_index" %>
<h1>Listing products</h1>

<table >

<% @products.each do |product| %>
  <tr>
	<td class="image" ><img title="" width="80px" height="100px" src="<%= product.image %>" /></td>
    <td valign="top">
		<h2>
			<b><%= product.name %></b>
		</h2>
		<p class="description" >
			<%= product.description %>
		</p>
	</td>
    <td align="right"><%= link_to 'Show', product %><br/>
    <%= link_to 'Edit', edit_product_path(product) %><br/>
    <%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path %>
